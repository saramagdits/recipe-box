<% include partials/header.ejs %>
<!--<div class="container-fluid">-->
<div class="container">
    <h1 class="form-header">Create a new recipe</h1>
    <div class="row">
        <div class="form-container">
            <form action="/recipes" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Recipe Title</label>
                    <input type="text" class="form-control" id="title" placeholder="Enter a recipe title" name="title"
                           required>
                </div>
                <fieldset class="form-group " id="ingredientsList">
                    <label for="ingredientsList">Ingredients</label>
                    <i class="far fa-plus-square fa-lg" id="addIngredient"></i>
                    <input type="text" class="form-control" placeholder="Enter an ingredient" name="ingredients[]"
                           required>
                    <i class="far fa-minus-square fa-lg" id="removeIngredient"></i>

                </fieldset>
                <div class="form-group">
                    <label for="instructions">Instructions</label>
                    <textarea rows="10" class="form-control" placeholder="Add your recipe instructions"
                              id="instructions" name="instructions" required></textarea>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">Upload</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="img" name="img"
                               accept="image/x-png,image/gif,image/jpeg,image/jpg" required>
                        <label class="custom-file-label" for="img"></label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>
<script type="text/javascript" src="/scripts/form.js"></script>